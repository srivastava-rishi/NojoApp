<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rsstudio.nojoto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nojoto">
        <activity
            android:name="com.rsstudio.nojoto.ui.base.BaseActivity"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"
            android:theme="@style/Simple_Theme_2"
            android:exported="false" />
        <activity
            android:name="com.rsstudio.nojoto.ui.splash.SplashActivity"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"
            android:theme="@style/Simple_Theme_2"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.rsstudio.nojoto.ui.main.MainActivity"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"
            android:theme="@style/Simple_Theme_2"
            android:exported="false"/>
    </application>

</manifest>